<%= render 'shared/errors', obj: @article %>

<div class='row'>

<div class='col-xs-12'>

		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :building %>

</div>
<div class="col-sm-8">
<%= f.text_field :title, class: "form-control", placeholder: "Name of Building, Address", autofocus: true %>
</div>
</div>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :architect %>

</div>
<div class="col-sm-8">
<%= f.text_field :architect, class: "form-control", placeholder: "Architect", autofocus: true %>
</div>
</div>


<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :description %>

</div>

<div class="col-sm-8">

<%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Description of the Building" %>

</div>

</div>

<div class="form-group">

<div class="col-sm-offset-2 col-sm-10">

<%= f.submit class: 'btn btn-primary btn-lg' %>

</div>

</div>

<% end %>

<div class="col-sm-10 col-sm-offset-2">

<%= link_to "Cancel request and return to articles listing", articles_path %>

</div>

</div>

</div>