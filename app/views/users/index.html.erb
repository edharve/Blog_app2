<h1 align="center", id="titles">Contributors</h1>
<div align="center">

<%= will_paginate %>
	<% @users.each do |user| %>
		<ul class="listing",list-style: none, >
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">

				<li,list-style: none><%= link_to gravatar_for(user), user_path(user) %></li>
					<br>
				<li class="user-title">
				<br>
				<%= link_to user.username, user_path(user) %>

				</li>

				<li, list-style: none><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>

				<% if logged_in? && current_user.admin? %>
				<br>
				<li, list-style: none><%= link_to 'Delete this User', user_path(user), method: :delete, 
						data: { confirm:  "Are you sure you want to delete the user and all their articles?" }, id:"button1", class: "btn btn-sm btn-primary" %>
						<% end %></li>

</div>

</div>

</ul>

<% end %>
<%= will_paginate %>
</div>